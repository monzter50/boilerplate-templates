<div class="form">
    <form class="form__container" autocomplete="off" >
        <div class="form__header">
            <h3 class="px-1">RESERVA EN LINEA</h3>
        </div>
        <div>
            <div class="tab">
                <ul class="tab__nav">
                    <li class="tab__item active"><a class="tab__link"> Hotel</a> </li>
                    <li class="tab__item  "><a class="tab__link">Hotel + Passagem</a></li>
                    <li class="tab__item"><a class="tab__link">Passagens</a></li>
                    <li class="tab__item"><a class="tab__link">Passeios</a></li>
                    <li class="tab__item"><a class="tab__link">Translados</a></li>
                </ul>
            </div>
            <div class="p-1 text--white">
                <div class="form--group">
                    <label for="">Destino/Hotel</label>
                    <input name="destinity" type="text" class="input--text input--primary" required>
                </div>
                <div class="form__reservation">
                    <div>
                        <div class="form--group">
                            <label for="">Chegada</label>
                            <div class="d-flex align-items-center">
                                <input name="checkin" type="date" class="input--date input--primary" required>
                                <i class="fas fa-calendar-alt text--third font-size-2 "></i>
                            </div>
                        </div>
                            <div class="form--group">
                            <label for="">Chegada</label>
                            <div class="d-flex align-items-center">
                                <input name="checkout" type="date" class="input--date input--primary" required>
                                <i class="fas fa-calendar-alt text--third font-size-2"></i>
                            </div>
                        </div>
                    </div>
                    <div  class="hotels-center-lg">
                        <div class="form__room">
                            <div class="form--group">
                                <label for="">Quartos</label>
                                <select name="rooms" id="rooms" class="input--number input--primary">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                </select> 
                            </div>
                            <div class="form__room" >
                                <div class="form--group" >
                                    <label for="">Adultos</label>
                                    <div id="adults">
                                        <select name="adults-1" class="input--number input--primary">
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                        </select> 
                                    </div>
                                    
                                </div>
                                <div class="form--group">
                                    <label for="">Criancas</label>
                                    <div id="children">
                                        <select name="children-1" class="input--number input--primary"  >
                                            <option value="0">0</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                        </select> 
                                    </div>
                                   
                                </div>
                            </div>
                            
                        </div>
                        <button class="button--primary send-form">RESERVAR AGORA</button>
                    </div>
                </div>
            </div>
         
        </div>
    </form>
</div>